<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Agencia de Viajes</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Google Fonts Montserrat para tipografía más amigable -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet" />
    <!-- Estilos personalizados -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVC.styles.css" asp-append-version="true" />
    <style>
        /* Si querés poner estilos rápidos aquí */
        body {
        font-family: 'Montserrat', sans-serif;
        background: linear-gradient(to right, #a0c8f0, #e0f0ff);
        min-height: 100vh;
        }

        .navbar-brand img {
        height: 30px;
        margin-right: 10px;
        }

        .navbar {
        background-color: #0077b6 !important; /* Azul viajero */
        }

        .navbar .nav-link {
        color: #caf0f8 !important;
        font-weight: 600;
        }

        .navbar .nav-link:hover {
        color: #90e0ef !important;
        }

        footer {
        background-color: #0077b6;
        color: #caf0f8;
        padding: 15px 0;
        margin-top: 40px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Envio" asp-action="Index">
                    <img src="~/imagenEnvio.jpg" alt="Logo Agencia" />
                    Agencia de Envios - Obligatorio P3 2025
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (Context.Session.GetString("Token") != null)
                        {
                            var rol = Context.Session.GetString("Rol");

                            if (rol == "Administrador")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Envio" asp-action="Index">Listado Envios</a>
                                </li>
                            }
                            else if (rol == "Cliente")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Envio" asp-action="MisEnvios">Mis Envíos</a>
                                </li>
                                <li>
                                    <a class="nav-link" asp-controller="Usuario" asp-action="CambioPassword">Cambiar Contraseña</a>
                                </li>
                            }
                            else if (rol == "Funcionario")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Envio" asp-action="Index">Listado Envios</a>
                                </li>
                            }

                            <li class="nav-item">
                                <a class="nav-link text-danger" asp-controller="Usuario" asp-action="Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Usuario" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-center">
        <div class="container">
            &copy; 2025 Agencia de Viajes P3 | Contacto: <a href="mailto:info@agenciaviajes.com" class="text-light">info@agenciaviajes.com</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body> 
</html>